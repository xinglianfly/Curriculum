<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ask_question"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_striped"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back_releasequestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="我要提问"
            android:textColor="#eeeeee"
            android:textSize="8pt"
            android:textStyle="italic" />
    </LinearLayout>

    <EditText
        android:id="@+id/ask_brief_edittext"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:maxLines="40"
        android:hint="亲，一句话描述题目吧" />

    <EditText
        android:id="@+id/ask_specific_edittext"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:gravity="top"
        android:maxEms="25"
        android:maxLength="200"
        android:hint="亲，提问不可以超过100字哦" />

    <Button
        android:id="@+id/ask_releaseask_button"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:textSize="25dp"
        android:text="发      表" />

</LinearLayout>